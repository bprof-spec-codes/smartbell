<Window x:Class="SmartBellClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBellClient"
        xmlns:vm="clr-namespace:SmartBellClient.VM"
        xmlns:repo="clr-namespace:Repository;assembly=Repository"
        xmlns:data="clr-namespace:Data;assembly=Data"
        mc:Ignorable="d"
        Title="MainWindow" Width="{x:Static repo:ConstConfig.Width}" Height="{x:Static repo:ConstConfig.Height}">
    <Window.Resources>
        <vm:MainViewModel x:Key="VM"/>
        <DataTemplate x:Key="listTemplate" DataType="{x:Type data:BellRing}">
            <DockPanel>
                <Label Content="{Binding Path=Description}" ContentStringFormat="Description: {0}" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
                <Label Content="{Binding Path=BellRingTime}"  ContentStringFormat="Ring at: {0}"  DockPanel.Dock="Right" HorizontalAlignment="Center"/>
                <Label Content="{Binding Path=Interval}" ContentStringFormat="Interval: {0}" DockPanel.Dock="Left"/>
                <Label />
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid DataContext="{StaticResource VM}">
        <ListBox ItemTemplate="{StaticResource listTemplate}" ItemsSource="{Binding Path=BellRings}" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" Height="232" Margin="0,10,0,0" VerticalAlignment="Top" Width="480" />
        <Button Command="{Binding Path=AddCmd}" Content="ADD" HorizontalAlignment="Left"
                Margin="697,17,0,0" VerticalAlignment="Top" Width="100" />
        <Button Command="{Binding Path=ModCmd}" Content="MOD" HorizontalAlignment="Left"
                Margin="697,55,0,0" VerticalAlignment="Top" Width="100" />
        <Button Command="{Binding Path=DelCmd}" Content="DEL" HorizontalAlignment="Left"
                Margin="697,90,0,0" VerticalAlignment="Top" Width="100" />
    </Grid>



</Window>
